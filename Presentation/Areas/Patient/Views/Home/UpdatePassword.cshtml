@model PatientUpdatePasswordDto
@{
    Layout = "~/Layouts/_PatientLayout.cshtml";
}

<section class="container">
    <h4 class="m-4">Şifre Güncelleme</h4>
    @Html.Partial("_UpdateProfileTab", "Password")
    <div class="d-flex justify-content-center">
        <form method="POST" class="mt-2 col-12 col-md-9 col-lg-6">
            <div class="mb-3">
                <label class="form-label">Eski Şifre</label>
                <input asp-for="Password" type="password" class="form-control">
                <span class="small text-danger" asp-validation-for="Password"></span>
                @if (TempData["ErrorMessage"] != null)
                {
                    <span class="small text-danger">
                        @TempData["ErrorMessage"]
                    </span>
                }
            </div>
            <div class="mb-3">
                <label class="form-label">Yeni Şifre</label>
                <input asp-for="NewPassword" type="password" class="form-control">
                <span class="small text-danger" asp-validation-for="NewPassword"></span>
            </div>
            <div>
                <label class="form-label">Yeni Şifre Tekrarı</label>
                <input asp-for="NewPasswordAgain" type="password" class="form-control">
                <span class="small text-danger" asp-validation-for="NewPasswordAgain"></span>
            </div>
            <div class="mt-5 d-grid gap-2">
                <button type="submit" class="btn btn-primary">Güncelle</button>
            </div>
        </form>
    </div>
</section>
